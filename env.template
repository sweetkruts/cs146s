# Copy this file to .env and fill in your values

# Required: Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Optional: iMessage database path (default shown below)
# IMESSAGE_DB_PATH=~/Library/Messages/chat.db

# Optional: Stale conversation threshold in hours (default: 48)
# STALE_THRESHOLD_HOURS=48

# Optional: Maximum conversations to analyze (default: 20)
# MAX_CONVERSATIONS_TO_CHECK=20

# Optional: Quiet hours (24-hour format, default: 22:00 to 08:00)
# QUIET_HOURS_START=22
# QUIET_HOURS_END=8

